{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@db/*": ["./backend/src/database/*"],
      "@models/*": ["./backend/src/database/models/*"],
      "@config/*": ["./backend/src/config/*"],
      "@routers/*": ["./backend/src/presentation/routers/*"],
      "@presentation/*": ["./backend/src/presentation/*"],
      "@entities/*": ["./backend/src/entities/*"],
      "@adapters/*": ["./backend/src/presentation/adapters/*"],
      "@factories/*": ["./backend/src/presentation/factories/*"],
      "@repositories/*": ["./backend/src/useCases/repositories/*"],
      "@useCases/*": ["./backend/src/useCases/*"],
      "@utils/*": ["./backend/src/utils/*"]
    }
  },
}

